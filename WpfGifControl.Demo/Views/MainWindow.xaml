<Window
    Height="600"
    Title="MainWindow"
    Width="860"
    mc:Ignorable="d"
    x:Class="WpfGifControl.Demo.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="clr-namespace:WpfGifControl;assembly=WpfGifControl"
    xmlns:interactions="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:WpfGifControl.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WpfGifControl.Demo.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionBtnStyle">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border
                                Background="#1474B8"
                                BorderBrush="#00CCFF"
                                BorderThickness="1"
                                CornerRadius="10"
                                x:Name="PART_BG" />

                            <TextBlock
                                FontSize="{TemplateBinding FontSize}"
                                Foreground="#fff"
                                HorizontalAlignment="Center"
                                Text="{TemplateBinding Content}"
                                VerticalAlignment="Center" />
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="PART_BG" Value="#47A7EB" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="PART_BG" Value="#0A3A5C" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="36" />
            <RowDefinition Height="15" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="1"
            Margin="15,0"
            Orientation="Horizontal">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Border
                    Background="#1474B8"
                    BorderBrush="#00CCFF"
                    BorderThickness="2"
                    CornerRadius="10 0 0 10"
                    Grid.Column="0" />

                <Border
                    BorderBrush="#00CCFF"
                    BorderThickness="2"
                    CornerRadius="10"
                    Grid.Column="0"
                    Grid.ColumnSpan="2" />

                <TextBlock
                    FontSize="16"
                    Foreground="#fff"
                    Grid.Column="0"
                    Margin="5,0"
                    Text="Source: "
                    VerticalAlignment="Center" />

                <ComboBox
                    Grid.Column="1"
                    IsEditable="False"
                    ItemsSource="{Binding SourceItems}"
                    Margin="10,0"
                    MinWidth="90"
                    SelectedIndex="{Binding SelectedSource}"
                    VerticalAlignment="Center">
                    <interactions:Interaction.Triggers>
                        <interactions:EventTrigger EventName="SelectionChanged">
                            <interactions:InvokeCommandAction Command="{Binding SelectSource}" />
                        </interactions:EventTrigger>
                    </interactions:Interaction.Triggers>

                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="14" Text="{Binding SourceName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>

            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Border
                    Background="#1474B8"
                    BorderBrush="#00CCFF"
                    BorderThickness="2"
                    CornerRadius="10 0 0 10"
                    Grid.Column="0" />

                <Border
                    BorderBrush="#00CCFF"
                    BorderThickness="2"
                    CornerRadius="10"
                    Grid.Column="0"
                    Grid.ColumnSpan="4" />

                <TextBlock
                    FontSize="16"
                    Foreground="#fff"
                    Grid.Column="0"
                    Margin="5,0"
                    Text="IterationCount: "
                    VerticalAlignment="Center" />

                <RadioButton
                    Command="{Binding CheckInfinite}"
                    Content="Infinite"
                    FontSize="14"
                    Grid.Column="1"
                    GroupName="BTN_IterationCount"
                    IsChecked="True"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center" />

                <RadioButton
                    Command="{Binding CheckSpecial}"
                    Content="Special count: "
                    FontSize="14"
                    Grid.Column="2"
                    GroupName="BTN_IterationCount"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center" />

                <TextBox
                    FontSize="14"
                    Grid.Column="3"
                    Margin="5,0"
                    Text="{Binding SpecialCount}"
                    VerticalAlignment="Center" />
            </Grid>

            <Button
                Command="{Binding PlayGif}"
                CommandParameter="{Binding ElementName=GifControl}"
                Content="Play"
                FontSize="16"
                Margin="20,0,0,0"
                Style="{DynamicResource ActionBtnStyle}"
                Width="80" />

            <Button
                Command="{Binding PauseGif}"
                CommandParameter="{Binding ElementName=GifControl}"
                Content="Pause"
                FontSize="16"
                Margin="10,0,0,0"
                Style="{DynamicResource ActionBtnStyle}"
                Width="80" />
        </StackPanel>

        <gif:GifControl
            Grid.Row="3"
            IterationCount="{Binding IterationCount}"
            Source="{Binding GifSource}"
            x:Name="GifControl">
            <interactions:Interaction.Triggers>
                <interactions:EventTrigger EventName="MouseEnter">
                    <interactions:InvokeCommandAction Command="{Binding DataContext.ReplayGif, RelativeSource={RelativeSource AncestorType=local:MainWindow}}" PassEventArgsToCommand="True" />
                </interactions:EventTrigger>
                <interactions:EventTrigger EventName="MouseLeave">
                    <interactions:InvokeCommandAction Command="{Binding DataContext.StopGif, RelativeSource={RelativeSource AncestorType=local:MainWindow}}" PassEventArgsToCommand="True" />
                </interactions:EventTrigger>
            </interactions:Interaction.Triggers>
        </gif:GifControl>
    </Grid>
</Window>
